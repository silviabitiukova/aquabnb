<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand nav-logo-hover" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%= link_to "Register your boat", "/boats/new", class: "btn-sec-col justify-content-end mr-3" %>
    <ul class="navbar-nav mr-auto">
      <% if !user_signed_in? %>
        <li class="nav-item">
          <strong>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-white auth-hover" %>
          </strong>
        </li>
        <li class="nav-item nav-link disabled text-white">|</li>
        <li class="nav-item">
          <strong >
            <%= link_to "Sign In", new_user_session_path, class: "nav-link text-white auth-hover" %>
          </strong>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Bookings", dashboard_path, class: "dropdown-item" %>
            <%= link_to "My Boats", dashboard_owner_path, class: "dropdown-item" %>
            <%= link_to "Incoming Bookings", dashboard_incoming_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
