<div class="cards mx-auto my-5 p-4 text-left br-10 opac-50">
  <% if @bookings.present? %>
    <% @bookings.each do |booking| %>
      <div class="card-boat">
        <% if booking.boat.photo.attached? %>
          <%= cl_image_tag booking.boat.photo.key %>
        <% else %>
          <%= image_tag "default_boat.png" %>
        <% end %>
        <div class="card-boat-headline">
          <h2><%= booking.boat.name %></h2>
          <h2><%= booking.boat.price_per_day %> â‚¬/day</h2>
        </div>
        <div class="card-boat-infos">
          <p>
            <%= booking.boat.boat_type %> (<%= booking.boat.year %>) <i class="fa fa-arrows-alt-h"> </i><%=booking.boat.length %>  <i class="fa fa-users"> </i><%= booking.boat.passenger_capacity %>  <i class="fas fa-anchor"> </i><%= booking.boat.port_location %>
          </p>
          <%#= link_to "more", boat_path(boat, query: params[:query].present? ? request.query_parameters[:query] : 'not coming from query'), class: "btn-prim-col" %>
          <h2><%= booking.boat.price_per_day * (booking.end_date - booking.start_date) %> â‚¬ Total</h2>
        </div>
      </div>
    <% end %>
    <% else %>
      <h2><%= "You do not have any bookings yet! Why not check out our Homepage? ðŸ˜‰" %></h2>
  <% end %>
</div>
